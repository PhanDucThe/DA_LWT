
@{
    ViewBag.Title = "Đăng ký";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        /* CSS này được tái sử dụng từ trang Login để đảm bảo tính nhất quán */
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f0f8ff; /* Màu nền xanh Alice Blue */
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            padding: 20px 0; /* Thêm padding để tránh form bị dính sát khi màn hình thấp */
        }

        .register-card {
            width: 100%;
            max-width: 480px; /* Tăng chiều rộng một chút để vừa các trường */
            padding: 30px;
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            background-color: #ffffff; /* Màu nền card là màu trắng */
        }

        .register-header {
            text-align: center;
            margin-bottom: 25px;
        }

            .register-header h2 {
                font-weight: 700;
                color: #0d6efd; /* Màu xanh dương chủ đạo */
            }

        .form-control {
            height: 50px;
            border-radius: 8px;
        }

            .form-control:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
            }

        .btn-register {
            font-size: 1rem;
            font-weight: 600;
            padding: 12px;
            border-radius: 8px;
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

        .login-link {
            font-size: 0.9rem;
        }

            .login-link a {
                color: #0d6efd;
                font-weight: 500;
                text-decoration: none;
            }

                .login-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <div class="register-card">
        <div class="register-header">
            <h2>Tạo Tài Khoản Mới</h2>
            <p class="text-muted">Nhanh chóng và dễ dàng.</p>
        </div>

        <form action="/Account/Register" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                <label for="fullName" class="mb-1">Họ và Tên <span style="color: red">*</span> </label>
                <input type="text" class="form-control" id="fullName" name="FullName" placeholder="Nhập họ và tên của bạn" required>
            </div>

            <div class="form-group mb-3">
                <label for="phoneNumber" class="mb-1">Số điện thoại <span style="color: red">*</span></label>
                <input type="tel" class="form-control" id="phoneNumber" name="PhoneNumber" placeholder="Nhập số điện thoại" required>
            </div>

            <div class="form-group mb-3">
                <label for="email" class="mb-1">Email <span style="color: red">*</span></label>
                <input type="email" class="form-control" id="email" name="Email" placeholder="Nhập địa chỉ email" required>
            </div>

            <div class="form-group mb-3">
                <label for="password" class="mb-1">Mật khẩu <span style="color: red">*</span></label>
                <input type="password" class="form-control" id="password" name="Password" placeholder="Tạo mật khẩu mới" required>
            </div>

            <div class="form-group mb-4">
                <label for="confirmPassword" class="mb-1">Xác nhận mật khẩu <span style="color: red">*</span></label>
                <input type="password" class="form-control" id="confirmPassword" name="ConfirmPassword" placeholder="Nhập lại mật khẩu" required>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary btn-register">Đăng Ký</button>
            </div>

            <div class="text-center mt-3 login-link">
                <p class="text-muted mb-0">
                    Đã có tài khoản?
                    <a href="/Account/Login">Đăng nhập tại đây</a>
                </p>
            </div>
        </form>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>

