@{
    ViewBag.Title = "Đăng nhập";
    // Đặt Layout thành null để trang này không sử dụng header/footer chung,
    // giúp trang đăng nhập toàn màn hình và tập trung hơn.
    // Nếu bạn vẫn muốn giữ layout cũ, hãy xóa dòng dưới đi.
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        /* CSS tùy chỉnh cho trang đăng nhập */
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f0f8ff; /* Màu nền xanh Alice Blue */
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }

        .login-card {
            width: 100%;
            max-width: 420px;
            padding: 30px;
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            background-color: #ffffff; /* Màu nền card là màu trắng */
        }

        .login-header {
            text-align: center;
            margin-bottom: 25px;
        }

            .login-header h2 {
                font-weight: 700;
                color: #0d6efd; /* Màu xanh dương chủ đạo */
            }

        .form-control {
            height: 50px;
            border-radius: 8px;
        }

            .form-control:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
            }

        .btn-login {
            font-size: 1rem;
            font-weight: 600;
            padding: 12px;
            border-radius: 8px;
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

        .social-divider {
            display: flex;
            align-items: center;
            text-align: center;
            color: #888;
            margin: 25px 0;
        }

            .social-divider::before,
            .social-divider::after {
                content: '';
                flex: 1;
                border-bottom: 1px solid #ddd;
            }

            .social-divider:not(:empty)::before {
                margin-right: .5em;
            }

            .social-divider:not(:empty)::after {
                margin-left: .5em;
            }

        .btn-social {
            font-weight: 500;
            padding: 12px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s ease-in-out;
            border: 1px solid #ddd;
        }

            .btn-social i {
                margin-right: 12px;
                font-size: 1.2rem;
            }

        /* Đã chỉnh sửa màu cho Google */
        .btn-google {
            background-color: #fff;
            color: #444; /* Màu chữ đen mặc định */
        }

            .btn-google:hover {
                background-color: #f8f9fa;
            }

            .btn-google i {
                color: #ea4335; /* Màu đỏ của biểu tượng Google */
            }

        /* Đã chỉnh sửa màu cho GitHub */
        .btn-github {
            background: black;
            color: white; /* Chữ trắng */
            border-color: #333;
        }

            .btn-github:hover {
                background-color: #222;
                border-color: white;
                color: white;
            }

            .btn-github i {
                color: white; /* Biểu tượng GitHub màu trắng */
            }
    </style>
</head>
<body>

    <div class="login-card">
        <div class="login-header">
            <h2>Đăng Nhập</h2>
            <p class="text-muted">Chào mừng bạn đã quay trở lại!</p>
        </div>

        <form action="/Account/Login" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                <label for="username" class="mb-1">Tên đăng nhập <span style="color: red">*</span></label>
                <input type="text" class="form-control" id="username" name="Username" placeholder="Nhập tên đăng nhập" required>
            </div>

            <div class="form-group mb-4">
                <label for="password" class="mb-1">Mật khẩu <span style="color: red">*</span></label>
                <input type="password" class="form-control" id="password" name="Password" placeholder="Nhập mật khẩu" required>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary btn-login">Đăng Nhập</button>
            </div>
        </form>

        <div class="social-divider">hoặc</div>

        <div class="d-grid gap-2">
            <a href="/Auth/GoogleLogin" class="btn btn-social btn-google">
                <i class="fab fa-google"></i> Tiếp tục với Google
            </a>
            <a href="/Auth/GitHubLogin" class="btn btn-social btn-github">
                <i class="fab fa-github"></i> Tiếp tục với GitHub
            </a>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>